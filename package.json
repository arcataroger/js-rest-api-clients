{
  "name": "js-rest-api-clients",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "lint": "rome ci packages",
    "format": "rome check packages --apply-suggested && rome format --write packages",
    "test": "npm run lint && jest --maxConcurrency=5",
    "generate": "./generate/index.ts && npm run format",
    "build": "lerna run build",
    "prepublishOnly": "npm run generate && ./generate/setClientVersion.ts && npm run build && npm run test",
    "publish": "lerna publish",
    "publish-next": "lerna publish --dist-tag next"
  },
  "author": "Stefano Verna <s.verna@datocms.com>",
  "license": "MIT",
  "devDependencies": {
    "@apidevtools/json-schema-ref-parser": "^9.0.9",
    "@types/jest": "^27.4.1",
    "@types/rimraf": "^3.0.2",
    "esbuild": "^0.14.34",
    "handlebars": "^4.7.7",
    "hyperschema-to-ts": "^0.0.11",
    "jest": "^27.5.1",
    "lerna": "^4.0.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3",
    "rome": "^11.0.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0"
  },
  "homepage": "https://github.com/datocms/js-rest-api-clients",
  "repository": {
    "type": "git",
    "url": "git://github.com/datocms/js-rest-api-clients.git"
  },
  "dependencies": {
    "cross-fetch": "^3.1.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "rome ci"
    ]
  }
}
